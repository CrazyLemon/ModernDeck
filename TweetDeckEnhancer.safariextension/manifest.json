{
  "name": "TweetDeck Enhancer",
  "short_name": "TD Enhancer",

  "description": "__MSG_ExtDesc__",
  "version": "6.0",

  "default_locale": "en_US",

  "permissions": [
    "webRequest",
    "webRequestBlocking",
    "https://tweetdeck.twitter.com/"
  ],

  "content_scripts": [
    {
      "matches": ["https://tweetdeck.twitter.com/"],
      "js": ["extension/TDERun.js"],
      "css": ["sources/css/enhancer.css"],
      "run_at": "document_end"
    }
  ],

  "icons": {
      "16": "AppIcon16.png",
      "24": "AppIcon24.png",
      "32": "AppIcon32.png",
      "48": "AppIcon48.png",
      "64": "AppIcon64.png",
      "128": "AppIcon128.png"
   },

  "web_accessible_resources": [
    "sources",
    "sources/*"
  ],

  "browser_action": {
    "default_icon": "sources/imgs/launcher.png",
    "default_popup": "sources/launcher/launcher.html",
    "default_title": "__MSG_ButtonHoverTitle__"
  },

  "manifest_version": 2
}
